  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "tsx": "^4.19.2",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "effect",
    "effect-ts",
    "patterns",
    "ai",
    "claude",
    "assistant"
