{
  "name": "@effect-patterns/mcp-server-stdio",
  "version": "0.1.0",
  "description": "MCP server for Effect-TS patterns - provides tools for searching and generating Effect code",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "effect-patterns-mcp": "dist/index.js"
  },
  "scripts": {
